<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/custom_cat_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_66sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:background="@drawable/bg_subcategories_border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_categories_img"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerVertical="true"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/icon_user" />

    <TextView
        android:id="@+id/tv_cate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_categories_img"
        android:text="Atm" />


    <ImageView
        android:id="@+id/iv_right_img"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

</RelativeLayout>