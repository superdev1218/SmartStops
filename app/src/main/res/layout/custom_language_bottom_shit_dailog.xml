<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:padding="@dimen/_15sdp"
                    android:textStyle="normal"
                    android:layout_toLeftOf="@id/iv_close"
                    android:textColor="@color/red"
                    android:layout_alignParentLeft="true"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="Select MapBox Voice Laguage"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_close"
                    android:src="@drawable/ic_close"
                    android:tint="@color/red"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/red"
                android:layout_height="0.8dp"/>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_English"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="English"
                    android:buttonTint="@color/red"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rb_french"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="French"
                    android:buttonTint="@color/red"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rb_Mandarin"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Mandarin"
                    android:buttonTint="@color/red"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rb_contonese"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Cantonese"
                    android:buttonTint="@color/red"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rb_german"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="German"
                    android:buttonTint="@color/red"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColor="@color/black" />

            </RadioGroup>



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/btn_done"
                    android:layout_width="wrap_content"
                    android:paddingRight="@dimen/_7sdp"
                    android:paddingLeft="@dimen/_7sdp"
                    android:layout_gravity="right"
                    android:textStyle="normal"
                    android:background="@drawable/bg_btn_red_rectangle"
                    android:layout_toLeftOf="@id/iv_close"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="Done"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
