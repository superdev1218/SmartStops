<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/_7sdp"
    android:id="@+id/linAdapterWayPoint"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:background="@drawable/bg_subcategories_border"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgWayPoint"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp" />


    <TextView
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtWayPointName"
        android:text="@string/app_name"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imgWayPoint"
        android:layout_toStartOf="@id/img_map_downloaded"
        android:gravity="start"
        />

    <ImageView
        android:id="@+id/img_map_downloaded"
        android:src="@drawable/download_done"
        app:tint="@color/red"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"/>
</RelativeLayout>